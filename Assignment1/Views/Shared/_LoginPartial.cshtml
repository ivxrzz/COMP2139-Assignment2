@using Microsoft.AspNetCore.Identity
@using Assignment1.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var role = "User";

        if (User.IsInRole("Admin"))
            role = "Admin";
        else if (User.IsInRole("Organizer"))
            role = "Organizer";
        else if (User.IsInRole("Attendee"))
            role = "Attendee";

        <li class="nav-item">
            <span class="nav-link text-dark fw-bold">
                Hello @role!
            </span>
        </li>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity"
                  asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index","Home")">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
